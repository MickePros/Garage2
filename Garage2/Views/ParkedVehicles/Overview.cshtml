@model IEnumerable<Garage2.Models.OverviewViewModel>

@{
    ViewData["Title"] = "Overview";
}

<h1>Overview</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Filter" method="get">
    <div class="input-group mb-3">
        <div class="input-group-append">
            <select class="form-control" name="type" asp-items="@Html.GetEnumSelectList<VehicleType>()">
                <option selected="selected" value="">Select @Html.DisplayNameFor(model => model.VehicleType)</option>
            </select>
        </div>
        <input type="text" id="filter-regnr" class="form-control" name="regNr" placeholder="Search for @Html.DisplayNameFor(model => model.RegNr)" />
        <input type="date" name="date" />
        <div class="input-group-append" id="filter-submit">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VehicleType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Arrival)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkLengthFormatted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Arrival)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.ParkLengthFormatted)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RegNr">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RegNr">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RegNr">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
